<%= form_for @user, url: wizard_path, method: :put, html: {role: 'form', class: 'ct-formRegister pull-right'} do |f| %>
    <div class="form-group">
      <div class="ct-form--label--type2">
        <div class="ct-u-displayTableVertical">
          <div class="ct-u-displayTableCell">
            <div class="ct-input-group-btn">
              <button class="btn btn-primary">
                <i class="fa fa-user"></i>
              </button>
            </div>
          </div>
          <div class="ct-u-displayTableCell text-center">
            <span class="text-uppercase">Fill your Name</span>
          </div>
        </div>
      </div>
      <div class="ct-form--item ct-u-marginBottom20">
        <%= f.text_field :first_name, required: true, autofocus: true, class: 'form-control input-lg' %>
      </div>
      <div class="ct-form--item ct-u-marginBottom20">
        <%= f.text_field :last_name, required: true, class:'form-control input-lg' %>
      </div>
      <div class="ct-form--item ct-u-marginBottom20">
        <%= image_tag @user.photo_url(:thumb) if @user.photo? %>
        <%= f.file_field :photo, required: true, class:'form-control input-lg' %>
        <%= f.hidden_field :photo_cache %>
      </div>
      <%= f.submit "Save and Next" %> # will move to the next page
    </div>
<% end %>
